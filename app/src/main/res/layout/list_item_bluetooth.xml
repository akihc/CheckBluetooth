<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativeLayoutDevice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@color/device_disconnected">

    <ImageView android:id="@+id/imageViewStatus"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_margin="3dp"
               android:src="@drawable/ic_bluetooth_disabled_black_36dp"/>

    <TextView android:id="@+id/textViewName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toEndOf="@+id/imageViewStatus"
              android:text="deviceName"/>

    <TextView android:id="@+id/textViewAddress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/textViewName"
              android:layout_toEndOf="@+id/imageViewStatus"
              android:text="deviceAddress"/>

    <ImageView
        android:id="@+id/imageViewDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="3dp"
        android:src="@drawable/ic_bluetooth_disabled_black_36dp"/>
</RelativeLayout>